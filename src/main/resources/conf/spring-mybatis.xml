	<!-- mybatis文件配置，扫描所有mapper文件 -->
	<bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean" p:configLocation="classpath:conf/mybatis-config.xml" p:dataSource-ref="dataSource"
          p:mapperLocations="classpath:mapper/*.xml" >

    </bean> <!-- configLocation为mybatis属性 mapperLocations为所有mapper -->

	<!-- spring与mybatis整合配置，扫描所有mapper -->
	<bean class="org.mybatis.spring.mapper.MapperScannerConfigurer"
		p:basePackage="mapper" p:sqlSessionFactoryBeanName="sqlSessionFactory" />

	<!-- 对数据源进行事务管理 -->
	<bean id="transactionManager"
		class="org.springframework.jdbc.datasource.DataSourceTransactionManager"
		p:dataSource-ref="dataSource" />

	<tx:annotation-driven transaction-manager="transactionManager" />

</beans>